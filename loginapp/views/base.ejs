
<%-include('header')-%>

<div class="text-center center-div bantai" id="login">
    <div class="container w-25 py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login</h2>
            <span>Welcome To TimeTable Manager</span>
            <%if(locals.logout){%>
                <div class="alter alert-success text-center">
                    Log out successfully...!
                </div>
            <%}%>

            <form action="/route/login" method="post" class="pt-3">
                <div class="form-group emailclass">
                    <input type="email" class="form-control " placeholder="Login" name="email">
                    <!-- <small class="form-text text-muted text-left">Register email address</address></small> -->
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <div class="checkbox">
                    <input type="checkbox" name="remember_me" id="remember_me" class="item 1">
                    <label for="remember_me" class=" item 2">Remember me</label>
                    <a  href="/forgot-password" class="forgot-password" >Forgot password?</a>
                </div>
                <button type="submit" class="btn btn-success rounded">Login</button>
            </form>
        </div>
    </div>
</div>

<%-include('footer')-%>
    
